# versiion
ARG cuda_version=9.0
ARG cudnn_version=7
ARG ubuntu_version=16.04

FROM nvidia/cuda:${cuda_version}-cudnn${cudnn_version}-devel-ubuntu${ubuntu_version}
#FROM ubuntu:18.04

# base image
MAINTAINER yubaoliu89@gmail.com

ENV LANG C.UTF-8
ENV LC_ALL C.UTF-8


# Setup timezone
RUN echo 'Etc/UTC' > /etc/timezone && \
    rm -f /etc/localtime && \
    ln -s /usr/share/zoneinfo/Etc/UTC /etc/localtime && \
    apt-get update && apt-get install -y tzdata

# Install tools for development
RUN apt-get update && \
    apt-get install -y vim \
    software-properties-common \
    sudo \
    byobu \
    gdb \
    htop \
    wget \
    git \
    openssh-server \
    curl \
    zip \
    unzip \
    g++ \
    graphviz \
    libevent-dev \
    bison \
    byacc \
    autotools-dev \
    automake \
    zsh \
    libgdbm-dev \
    libssl-dev \
    libreadline-dev \
    zlib1g-dev \
    autoconf \
    bison \
    build-essential \
    libyaml-dev \
    dirmngr \
    gnupg \
    git \
    build-essential \
    libffi-dev \
    libncurses5-dev \
    libssl-dev \
    libreadline-dev \
    zlib1g-dev && \
    apt install -f && \
    apt upgrade -y

# Install rbenv
RUN apt autoremove -y ruby*  && \
	apt autoremove && \
	apt update && \
	git clone https://github.com/rbenv/rbenv.git ~/.rbenv && \
    echo 'export PATH="$HOME/.rbenv/bin:$PATH"' >> ~/.bashrc && \
    echo 'eval "$(rbenv init -)"' >> ~/.bashrc

ENV PATH /root/.rbenv/shims:/root/.rbenv/bin:$PATH

# Install ruby-build & ruby
RUN git clone https://github.com/rbenv/ruby-build.git ~/.rbenv/plugins/ruby-build && \
    ~/.rbenv/bin/rbenv install 2.6.6 && \
    ~/.rbenv/bin/rbenv global 2.6.6

# Initiarize ruby encording
ENV RUBYOPT -EUTF-8

# Install bundler
RUN ~/.rbenv/bin/rbenv exec gem install bundler

# upgrade Ruby before other tasks
# Remove old version firstly
# Install Ruby on Ubuntu with Snap
# https://stackify.com/install-ruby-on-ubuntu-everything-you-need-to-get-going/
# Install rbenv and ruby-build
# ENV PATH ~/.rbenv/bin:$PATH
# RUN apt-get update && \
#     apt remove -y ruby && \
#     apt autoremove -y && \
#     rm ~/.rbenv -rf && \
#     git clone https://github.com/sstephenson/rbenv.git ~/.rbenv && \
#     git clone https://github.com/sstephenson/ruby-build.git ~/.rbenv/plugins/ruby-build && \
#     ~/.rbenv/plugins/ruby-build/install.sh && \
#     echo 'eval "$(rbenv init -)"' >> /etc/profile.d/rbenv.sh  && \
#     echo 'eval "$(rbenv init -)"' >> .bashrc && \
#     ~/.rbenv/bin/rbenv install 2.6.6 && \
#     ~/.rbenv/bin/rbenv global 2.6.6 && \
#     apt-get install -y rubygems npm 
 

#ENV PATH /root/.rbenv/bin:$PATH

# Python
RUN apt-get update && \
    apt-get install -y python3-pip \
    python3-dev
 
#update pip 
RUN curl -kL https://bootstrap.pypa.io/get-pip.py | python3 

# Add ROS repository
RUN sh -c 'echo "deb http://packages.ros.org/ros/ubuntu bionic main" > /etc/apt/sources.list.d/ros-latest.list'
# Keys for ROS repository
RUN apt-key adv --keyserver 'hkp://keyserver.ubuntu.com:80' --recv-key C1CF6E31E6BADE8868B172B4F42ED6FBAB17C654

# Install ROS-Base packages
RUN apt-get update && apt install -f && apt-get install -y ros-melodic-desktop-full

# Set up rosdep
RUN rosdep init
RUN rosdep update

# Install ROS bootstrap tools
RUN apt-get update && apt-get install --no-install-recommends -y \
    python-rosdep \
    python-rosinstall \
    python-vcstools \
    python-rosinstall-generator \
    python-wstool

### Create catkin workspace ###
RUN mkdir -p /root/catkin_ws/src
WORKDIR /root/catkin_ws
RUN bash -c "source /opt/ros/melodic/setup.bash && \
             catkin_make -DCMAKE_BUILD_TYPE=Release"

# Load ROS environment at docker exec bash
RUN echo "source /opt/ros/melodic/setup.bash" >> /root/.bashrc
RUN echo "source /root/catkin_ws/devel/setup.bash" >> /root/.bashrc
                  
# Build
RUN /bin/bash -c "source /opt/ros/melodic/setup.bash && \
                  catkin_make -DCMAKE_BUILD_TYPE=Release"

# Install mask rcnn dependencies
COPY requirements.txt /root/requirements.txt
RUN  pip3 install --force-reinstall -r /root/requirements.txt

WORKDIR /root

# Self defined script
COPY ./userconfig.sh /root/userconfig.sh
# RUN chmod 777 /root/userconfig.sh 

# Finally install some helpful tools
RUN apt-get update && \
    apt-get install -y vim \
    vim-gtk \ 
    tmux \
    trash-cli \
    lxterminal && \
	gem install --user-install tmuxinator && \
	wget https://raw.githubusercontent.com/tmuxinator/tmuxinator/master/completion/tmuxinator.zsh -O /usr/local/share/zsh/site-functions/_tmuxinator && \
    apt install -f && \
    apt upgrade -y


# Load ROS environment at each run
COPY ./entrypoint.sh /root/entrypoint.sh
RUN chmod 777 /root/entrypoint.sh
ENTRYPOINT ["/root/entrypoint.sh"]

CMD ["bash"]


# From https://github.com/NVIDIA/nvidia-container-runtime/blob/master/README.md
# compute: required for CUDA and OpenCL applications.
# display: required for leveraging X11 display.
# graphics: required for running OpenGL and Vulkan applications.
# utility: required for using nvidia-smi and NVML.
# video: required for using the Video Codec SDK. Required by ZED SDK.
ENV NVIDIA_DRIVER_CAPABILITIES compute,display,graphics,utility,video


